<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-ASSETS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap.min.css" 
    <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class='one'>
        <form action="/new" method="post">      
           <button>NEW</button>          
        </form>
        <br>
        <br>
        <br>
        <div>
            
                <table border="6">
                    <tbody>
                        <tr>
                            <th>OWNER</th>
                            <th>NAME</th>
                            <th>TYPE</th>
                            <th>DESCRIPTION</th>
                            <th>AREA</th>
                            <th>CAPACITY</th>
                            <th>ASSETID</th>
                            <th>NUMBER OF ROOMS</th>
                            <th>YEAR OF CONSTRUCTION</th>
                            <th>MAINTENANCE</th>
                        </tr>
                        <% for(var k=0; k < asse.length; k++) {%>
                            <tr>
                                <th><%=asse[k].Owner%></th>
                                <th><%= asse[k].Name%></th>
                                <th><%= asse[k].Type %></th>
                                <th><%= asse[k].Description %></th>
                                <th><%= asse[k].Area %></th>
                                <th><%= asse[k].Capacity %></th>
                                <th ><%= asse[k].AssetId %></th>
                                <th><%= asse[k].NumberOfRooms %></th>
                                <th><%= asse[k].YearOfConstruction%></th>
                                <th><%= asse[k].MaintenanceRequired %></th>
                                <th><a href="/delete/<%=asse[k]._id%>">delete</a></th>
                                
                                <th><a  class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" href="/move/<%=asse[k]._id%>">edit</a>

                                    <!-- Modal -->
                                    <div class="modal fade" id="myModal" role="dialog">
                                      <div class="modal-dialog">
                                      
                                        <!-- Modal content-->
                                        <div class="modal-content">
                                          <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Modal Header</h4>
                                          </div>
                                          <div class="modal-body">
                                            <form action="/required" method="post"> 
                                                <h1 style="padding: 80px;">ENTER THE DETAILS BELOW
                                                </h1>
                                                <div style="padding-left: 80px;">
                                                    <label>Enter the Owner</label>
                                                    <input type="text" name="assetowner"><br>
                                                <label>Enter Name</label>
                                                <input type="text" name="assetName"><br>
                                                
                                                <label>Enter TYPE</label>
                                                <input type="text" name="assetType"><br>
                                                <label>Enter DESCRIPTION</label>
                                                <input type="text" name="assetDescription"><br>
                                                <label>Enter AREA</label>
                                                <input type="number" name="assetArea"><br>
                                                <label>Enter CAPACITY</label>
                                                <input type="number" name="assetCapacity"><br>
                                                <label>Enter ASSETID</label>
                                                <input type="number" name="assetAssetId"><br>
                                                <label>Enter NUMBER OF ROOMS</label>
                                                <input type="number" name="assetNumberOfRooms"><br>
                                                <label>Enter YEAR OF CONSTRUCTION</label>
                                                <input type="number" name="assetYearOfConstruction"><br>
                                                <label>Enter MaintenanceRequired</label>
                                                <input type="text" name="assetMaintenanceRequired">
                                                <br>
                                                <br><br><br>
                                            </div>
                                            <div style="padding-left: 80px;">
                                                <button>
                                                    SUBMIT
                                                </button>
                                            </form>
                                                </div>
                                            </body>
                                          </div>
                                          <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                          </div>
                                        </div>
                                        
                                      </div>
                                    </div></th>
                           
                                       
                                
    
                                <% } %>
                                
                            </tr>
                        
                    </tbody>
                </table>
           
        </div>    

    </div>
</body>
</html>